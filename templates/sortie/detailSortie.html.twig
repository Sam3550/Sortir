{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex justify-center my-6 text-4xl"><h1>Consulter la sortie {{ sortie.nom }}</h1></div>
    <div class="flex gap-4 w-auto mt-15">
        <div class="w-full">
            <div class="flex items-center gap-4 mb-4 mx-4">
                <p><b>Nom de la sortie :</b> {{ sortie.nom }}</p>
            </div>
            <div class="flex items-center gap-4 mb-4 mx-4">
                <p><b>Date & heure de la sortie :</b> {{ sortie.dateHeureDebut | date("Y-m-d H:i") }}</p>
            </div>
            <div class="flex items-center gap-4 mb-4 mx-4">
                <p><b>Date limite d'inscription :</b> {{ sortie.dateLimiteInscription | date("Y-m-d") }}</p>
            </div>
            <div class="flex items-center gap-4 mb-4 mx-4">
                <p><b>Nombre de places restantes :</b> {{ max(0, sortie.nbInscriptionMax - sortie.participants|length) }}</p>
            </div>
            <div class="flex items-center gap-4 mb-4 mx-4">
                <p><b>Durée de la sortie :</b> {{ sortie.duree }} minutes</p>
            </div>
            <div class="flex items-center gap-4 mb-4 mx-4">
                <p class="text-justify"><b>Infos sortie :</b> {{ sortie.infosSortie }}</p>
            </div>
        </div>
        <div class="w-full">
            <div class="flex items-center gap-4 mb-4 mx-4">
                <p><b>Ville de la sortie :</b> {{ sortie.lieu.ville.nom }}</p>
            </div>
            <div class="flex items-center gap-4 mb-4 mx-4">
                <p><b>Lieu de la sortie :</b> {{ sortie.lieu.nom }}</p>
            </div>
            <div class="flex items-center gap-4 mb-4 mx-4">
                <p><b>Rue :</b> {{ sortie.lieu.rue }}</p>
            </div>
            <div class="flex items-center gap-4 mb-4 mx-4">
                <p><b>Code postal :</b> {{ sortie.lieu.ville.codePostal }}</p>
            </div>
            <div class="flex items-center gap-4 mb-4 mx-4">
                <p><b>Latitude :</b> {{ sortie.lieu.latitude }}</p>
            </div>
            <div class="flex items-center gap-4 mb-4 mx-4">
                <p><b>Longitude :</b> {{ sortie.lieu.longitude }}</p>
            </div>
        </div>
    </div>

    {% if sortie.participants | length>0 %}
    <div class="mx-4">
        <h2><b>Liste des participants inscrits :</b></h2>
        <table class="border-1 border-slate-400 mt-2">
            <thead class="border-1 border-slate-400">
                <tr>
                    <th class="px-2 border-1 border-slate-400">Pseudo</th>
                    <th class="px-2 border-1 border-slate-400">Nom Prénom</th>
                </tr>
            </thead>
            <tbody class="border-1 border-slate-400">
            {% for participant in sortie.participants %}
                {# TODO mettre participant.pseudo à la place de participant.id #}
                <tr>
                    <td class="px-2 border-1 border-slate-400">{{ participant.id}}</td>
                    <td class="px-2 border-1 border-slate-400">{{ participant.nom }} {{ participant.prenom }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% endif %}
    {% if(app.user.id == sortie.organisateur.id) %}
    <div class="flex justify-center items-center gap-4 mt-8">
        {% if(sortie.etat.libelle == "Créée") %}
            <a href="{{ path('sortie_update', {'id':sortie.id}) }}" class="w-40 h-15 bg-emerald-300/75 hover:bg-emerald-400/50 rounded-md inline-flex items-center justify-center">Modifier la sortie</a>
        {% endif %}
        {% if(sortie.etat.libelle == "Ouverte") %}
            <a href="{{ path('sortie_delete', {'id':sortie.id}) }}" class="w-40 h-15 bg-rose-300/75 hover:bg-rose-400/50 rounded-md inline-flex items-center justify-center">Annuler la sortie</a>
        {% endif %}

    </div>
    {% endif %}
        <div class="flex justify-center my-6">
            <h2><b>Aperçu de la localisation</b></h2>
        </div>
        <div id="mapid" style="height: 400px; width: 100%;"></div>

        <script>
            document.addEventListener('DOMContentLoaded', function() {
                var latitude = {{ sortie.lieu.latitude }};
                var longitude = {{ sortie.lieu.longitude }};

                if (latitude && longitude) {
                    var mymap = L.map('mapid').setView([latitude, longitude], 13);

                    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
                    }).addTo(mymap);

                    L.marker([latitude, longitude]).addTo(mymap)
                        .bindPopup('<b>{{ sortie.lieu.nom | e('js') }}</b><br>{{ sortie.lieu.rue | e('js') }}')
                        .openPopup();
                } else {
                    document.getElementById('mapid').innerHTML = '<p>Coordonnées de localisation non disponibles.</p>';
                }
            });
        </script>

{% endblock %}