{% extends 'base.html.twig' %}

{% block title %}Définir votre mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Définir votre mot de passe</div>
                    <div class="card-body">
                        {{ form_start(passwordForm) }}
                            {{ form_row(passwordForm.plainPassword) }}
                            {{ form_row(passwordForm.confirmPassword) }}
                            <button type="submit" class="btn btn-primary">Définir le mot de passe</button>
                        {{ form_end(passwordForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}