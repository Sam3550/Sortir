{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <p>
                    Connexion pour : <strong>{{ email }}</strong>
                    <a href="{{ path('app_entry') }}" class="small">(Changer d'utilisateur)</a>
                </p>

                <form action="{{ path('app_login') }}" method="post">
                    {# Le champ email est nécessaire pour que le système de sécurité identifie l'utilisateur #}
                    <input type="hidden" name="email" value="{{ email }}">

                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="password" id="password" class="form-control" required>
                    </div>

                    <div class="form-check mt-2">
                        <input type="checkbox" name="_remember_me" id="remember_me" class="form-check-input">
                        <label for="remember_me" class="form-check-label">Se souvenir de moi</label>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="btn btn-lg btn-primary mt-3" type="submit">
                        Connexion
                    </button>
                </form>

                <div class="mt-3">
                    <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}