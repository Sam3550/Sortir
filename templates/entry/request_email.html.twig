{% extends 'base.html.twig' %}

{% block title %}Connexion ou Inscription{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="h3 mb-3 font-weight-normal">Connexion ou Inscription</h1>

                {% for flash_error in app.flashes('error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                <p>Veuillez saisir votre adresse e-mail pour continuer.</p>

                {{ form_start(emailForm) }}
                {{ form_row(emailForm.email) }}
                <button class="btn btn-lg btn-primary mt-2" type="submit">
                    Continuer
                </button>
                {{ form_end(emailForm) }}
            </div>
        </div>
    </div>
{% endblock %}
