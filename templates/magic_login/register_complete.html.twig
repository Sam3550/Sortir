{% extends 'base.html.twig' %}

{% block title %}Finaliser l'inscription{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center mt-5">Finalisez votre inscription</h1>
            <p class="text-center">Bienvenue ! Veuillez compléter les informations ci-dessous pour créer votre compte.</p>

            {{ form_start(form) }}
            {{ form_widget(form) }}

            <div class="d-grid mt-3">
                <button type="submit" class="btn btn-primary">S'inscrire</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
