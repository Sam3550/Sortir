{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mt-5">Accès à la plateforme</h1>
            <p class="text-center">Veuillez saisir votre adresse e-mail pour continuer.</p>

            {{ form_start(form) }}
            
            <div class="my-3">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre adresse e-mail...'}}) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Continuer</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
