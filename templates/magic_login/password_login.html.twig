{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mt-5">Bon retour parmi nous !</h1>
            <p class="text-center">Votre adresse e-mail <strong>{{ email }}</strong> est reconnue. Veuillez saisir votre mot de passe.</p>

            {{ form_start(form) }}
            
            {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
            {{ form_widget(form.email) }} {# This is the hidden field #}

            <div class="d-grid mt-3">
                <button type="submit" class="btn btn-primary">Se connecter</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
